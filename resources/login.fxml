<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.productivity.controller.LoginController"
            prefWidth="400" prefHeight="450" styleClass="root">

    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="40">
        <Label text="Productivity App" styleClass="header" />

        <VBox spacing="15" style="-fx-padding: 0 0 20 0;">
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
        </VBox>

        <Button text="Login" onAction="#handleLogin" styleClass="login-button" defaultButton="true" />
        <Button text="Register" onAction="#handleRegister" styleClass="secondary-button" />

        <Label fx:id="errorLabel" styleClass="error-label" />
    </VBox>
</AnchorPane>